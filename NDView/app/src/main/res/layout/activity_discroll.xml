<?xml version="1.0" encoding="utf-8"?>

<com.webapps.view.anim.discroll.DiscrollScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:discrollvc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.webapps.view.anim.discroll.DiscrollLinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="ItemText1"
            android:gravity="center"
            discrollvc:discrollvc_fromBgColor = "#00ffff"
            discrollvc:discrollvc_toBgColor = "#ffff00"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <TextView
            android:text="ItemText2"
            android:gravity="center"
            discrollvc:discrollvc_scaleX = "true"
            discrollvc:discrollvc_scaleY = "true"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:text="ItemText3"
            android:gravity="center"
            discrollvc:discrollvc_translation = "fromLeft|fromBottom"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:text="ItemText1"
            android:gravity="center"
            discrollvc:discrollvc_fromBgColor = "#ff00ff"
            discrollvc:discrollvc_toBgColor = "#00f00f"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <TextView
            android:text="ItemText2"
            android:gravity="center"
            discrollvc:discrollvc_scaleX = "true"
            discrollvc:discrollvc_scaleY = "true"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:text="ItemText3"
            android:gravity="center"
            discrollvc:discrollvc_translation = "fromLeft|fromBottom"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    </com.webapps.view.anim.discroll.DiscrollLinearLayout>

</com.webapps.view.anim.discroll.DiscrollScrollView>

