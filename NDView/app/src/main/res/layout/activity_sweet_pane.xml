<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sweetPane="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.webapps.view.view.SweetPaneListView
            android:id="@+id/sweetPaneListView"
            sweetPane:scrollBarPanel="@layout/sweet_pane_view"
            sweetPane:scrollBarPanelInAnimation="@anim/in"
            sweetPane:scrollBarPanelOutAnimation="@anim/out"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</layout>