<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DiscrollView_layoutParams">
        <attr name="discrollvc_alpha" format="boolean"/>
        <attr name="discrollvc_scaleX" format="boolean"/>
        <attr name="discrollvc_scaleY" format="boolean"/>
        <attr name="discrollvc_fromBgColor" format="color"/>
        <attr name="discrollvc_toBgColor" format="color"/>
        <attr name="discrollvc_translation"/>
    </declare-styleable>
    <attr name="discrollvc_translation">
        <flag name="fromTop" value="0x01"/>
        <flag name="fromBottom" value="0x02"/>
        <flag name="fromLeft" value="0x04"/>
        <flag name="fromRight" value="0x08"/>
    </attr>
    <declare-styleable name="SlidingCardLayout">
        <attr name="android:colorBackground"/>
        <attr name="android:text"/>
    </declare-styleable>



    <declare-styleable name="WaveView">
        <!-- 波长 -->
        <attr name="waveLength" format="dimension"/>
        <!-- 是否上升 -->
        <attr name="rise" format="boolean"/>
        <!-- 小船的图片 -->
        <attr name="boatBitmap" format="reference"/>
        <!-- 水位的初始位置 -->
        <attr name="originY" format="dimension"/>
        <!-- 波峰的高度 -->
        <attr name="waveHeight" format="dimension"/>
        <!-- 水涨的快慢 -->
        <attr name="duration" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ExtendedListView">
        <attr name="scrollBarPanel" format="reference"/>
        <attr name="scrollBarPanelInAnimation" format="reference"/>
        <attr name="scrollBarPanelOutAnimation" format="reference"/>
    </declare-styleable>
</resources>